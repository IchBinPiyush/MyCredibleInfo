<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="10dp"
    tools:context=".update.ProfessionalUpdate">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/prof" />

            <TextView
                android:id="@+id/profDetails"
                android:text="Update Professional details"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Organisation"
                android:textSize="20dp"
                android:id="@+id/organisation"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/designation"
                android:hint="Designation"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/currentlyWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/currentlyWorkDec"
                    android:layout_marginLeft="10dp"
                    android:text="Currently work here"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date : "
                    />

                <Spinner
                    android:id="@+id/start"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/years"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="End Data   : "
                    android:textSize="20dp"
                    android:id="@+id/endDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:entries="@array/years"
                    android:scrollbarSize="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>
            <Button
                android:layout_marginTop="70dp"
                android:id="@+id/save"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="#21B8DB"
                android:textSize="20dp"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="#FFF" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>